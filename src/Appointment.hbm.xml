<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.beans.Appointment"
		table="appointment">
		<meta attribute="class-description">
			This class contains the Appointment details.
		</meta>
		<id name="appntmntId" type="string" column="appntmntId">
			<generator class="native" />
		</id>
		<property name="labId" column="labId" type="string" />		
		<property name="labbranchCode" column="labbranchCode" type="string" />
		<property name="custId" column="custId" type="string" />
		<property name="testId" column="testId" type="string" />
		<property name="acceptedOn" column="acceptedOn" type="date" />		
		<property name="scheduleDate" column="scheduleDate" type="date" />
		<property name="testDate" column="testDate" type="date" />
		<property name="isHomePick" column="isHomePick" type="boolean" />
		<property name="now" column="now" type="boolean" />
		<property name="status" column="status" type="boolean" />
		

	</class>
</hibernate-mapping>